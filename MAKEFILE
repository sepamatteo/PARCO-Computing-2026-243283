# Compiler
CXX = g++
CC = gcc

# Compiler flags
CXXFLAGS = -O2 -std=c++17 -Wall
CFLAGS = -O2 -Wall

# Target executable
TARGET = spmv

# Source files
SRCS_CPP = src/main.cpp
SRCS_C = src/mmio.c

# Object files
OBJS_CPP = $(SRCS_CPP:.cpp=.o)
OBJS_C = $(SRCS_C:.c=.o)

# Default target
all: $(TARGET)

# Build executable
$(TARGET): $(OBJS_CPP) $(OBJS_C)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Compile C++ source files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Compile C source files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -f $(OBJS_CPP) $(OBJS_C) $(TARGET)

.PHONY: all clean
